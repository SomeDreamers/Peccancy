
@section styles{
    <style type="text/css">
        .form-inline .form-control {
            width: 50%;
        }
    </style>
}

@section scripts{
    @Html.Partial("_ValidationScriptsPartial")
    
}

@model User

@using (Html.BeginForm("Save", "ManagerUser"))
{
    <div class="form-horizontal">
        <h1><spna class="glyphicon glyphicon-pencil"></spna>登记用户</h1>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Card, "身份证号", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Card, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Card, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrueName, "真实姓名", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.TrueName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TrueName, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, "密码", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password" })
                @Html.ValidationMessageFor(model => model.Password, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Age, "年龄", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Age, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(model => model.Age, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sex, "性别", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.DropDownListFor(model => model.Sex, 
                new List<SelectListItem> { new SelectListItem { Text = "男", Value = "0" }, new SelectListItem { Text = "女", Value = "1" } }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sex, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tell, "电话", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Tell, new { @class = "form-control", type = "tel" })
                @Html.ValidationMessageFor(model => model.Tell, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, "家庭地址", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Domicile, "户籍所在地", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Domicile, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Domicile, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}