
@model List<User>
<div class="bs-example" data-example-id="bordered-table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>序号</th>
                <th>姓名</th>
                <th>身份证号</th>
                <th>年龄</th>
                <th>性别</th>
                <th>电话</th>
                <th>住址</th>
                <th>户籍</th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@(i++)</th>
                        <td>@item.TrueName</td>
                        <td>@item.Card</td>
                        <td>@item.Age</td>
                        <td>@(item.Sex == 0 ? "男" : "女")</td>
                        <td>@item.Tell</td>
                        <td>@item.Address</td>
                        <td>@item.Domicile</td>
                    </tr>
                }
            }  
        </tbody>
    </table>
</div>