@{
    Layout = "_AccountLayout";
}

@model UserModel

@using (Html.BeginForm("Register", "Account"))
{
    <div class="form-horizontal">
        <h1><spna class="glyphicon glyphicon-pencil"></spna>注册</h1>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "用户名", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, "密码", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type="password" })
                @Html.ValidationMessageFor(model => model.Password, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SurePassword, "密码确认", new { @class = "control-label col-md-2" })
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.SurePassword, new { @class = "form-control", type = "password" })
                @Html.ValidationMessageFor(model => model.SurePassword, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Account/Authenticate"><input type="submit" value="注册" class="btn btn-default btn-primary" /></a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="/Account/Login"><span class="glyphicon glyphicon-tree-deciduous">登录</span></a>
            </div>
        </div>
    </div>
}