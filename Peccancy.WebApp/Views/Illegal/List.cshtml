
@model List<Illegal>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>序号</th>
            <th>违章标题</th>
            <th>内容描述</th>
            <th>违章类型</th>
            <th>严重程度</th>
            <th>处罚措施</th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.Type</td>
                <td>@item.Ponderance</td>
                <td>@item.Punishment</td>
            </tr>
             }
    </tbody>
</table>

