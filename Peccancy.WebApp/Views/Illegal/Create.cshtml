
@model Illegal
@{
    ViewData["Title"] = "创建违章规则";
}

@section styles{
    <style type="text/css">
        .form-inline .form-control {
            width: 60%;
        }
    </style>
}

@section scripts{
}

@using (Html.BeginForm("Save", "Illegal", new { name = "form", id = "form" }))
{
    <div class="container form-horizontal" style="height:750px;" id="jobList">
        <div class="row">
            <h1><span class="glyphicon glyphicon-pencil"></span>@ViewData["Title"]</h1>
        </div>
        <div class="form-group">
            <label for="Title" class="control-label col-md-2">标题</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Content" class="control-label col-md-2">内容描述</label>
            <div class="col-md-10 form-inline">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="Count" class="control-label col-md-2">违章类型</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Type, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Type, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="StartTime" class="control-label col-md-2">严重程度</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Ponderance, new { @class = "form-control form_datetime" })
                @Html.ValidationMessageFor(model => model.Ponderance, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label for="EndTime" class="control-label col-md-2">处罚措施</label>
            <div class="col-md-10 form-inline">
                @Html.TextBoxFor(model => model.Punishment, new { @class = "form-control form_datetime" })
                @Html.ValidationMessageFor(model => model.Punishment, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <span style="margin-right:100px;margin-left:400px"><button type="submit" class="btn btn-default">创建</button></span>
            <span><a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">返回</a></span>
        </div>
    </div>
}


